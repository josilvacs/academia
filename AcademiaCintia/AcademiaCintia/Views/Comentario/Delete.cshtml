@model AcademiaCintia.Models.Comentario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1 class="display-4">Comentario</h1>
<h4 class="display-6">Excluir</h4>
<hr />
<h3 class="text-danger">Confirma a exclus√£o desse Comentario?</h3>
<div class="row" enctype="multipart/form-data">
    <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Foto" class="form-label"></label>
            <img id="PreviewImage" src="@Model.Foto" class="img-fluid w-100">
        </div>
    </div>
    <div class="col-md-8 col-sm-12 col-xxl-9">
        <div class="col-12 mb-2">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" disabled/>
        </div>
        <div class="col-12 mb-2">
            <label asp-for="ComentarioTexto" class="form-label"></label>
            <textarea asp-for="ComentarioTexto" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <label asp-for="ComentarioData" class="form-label"></label>
                <input asp-for="ComentarioData" class="form-control" disabled/>
            </div>
            <div class="col-md-4">
                <label asp-for="Nota" class="form-label"></label>
                <input asp-for="Nota" class="form-control" disabled/>
            </div>
        </div>
    </div>
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-3"><i class="bi bi-trash-fill"></i> Excluir</button>
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </form>
    </div>
</div>
