@model AcademiaCintia.Models.Modalidade

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Modalidade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
            <img src="@Model.Foto">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
    </dl>
</div>
<div class="col-12 mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success me-3"  style="background-color: #3bb54a"><i class="bi bi-pencil-fill"></i> Editar</a>
        <a asp-action="Index" class="btn btn-primary"  style="background-color: #3bb54a"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </div>
