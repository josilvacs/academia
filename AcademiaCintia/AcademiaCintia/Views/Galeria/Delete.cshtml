@model AcademiaCintia.Models.Galeria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Delete</h1>

<h3>Tem certeza que quer remover essa Foto?</h3>
<div>
    <h4>Galeria</h4>
    <hr />
    <dl class="row">
        <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Foto" class="form-label"></label>
            <img src='@Model.Foto' class="img-fluid w-100">
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary" style="background-color: #3bb54a"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </form>
</div>
