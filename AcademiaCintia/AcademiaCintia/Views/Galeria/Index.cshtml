@model IEnumerable<AcademiaCintia.Models.Galeria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Galeria</h1>
<p class="py-3">
    <a class="btn btn-secondary" asp-action="Create" style="background-color: #3bb54a"><i class="bi bi-plus-circle-fill"></i> Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: #3bb54a" data-bs-toggle="tooltip" data-bs-title="Editar Gênero"><i
                            class="bi bi-pencil-fill" ></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: #3bb54a" data-bs-toggle="tooltip"
                        data-bs-title="Exibir Detalhes"><i class="bi bi-search"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color: #3bb54a" data-bs-toggle="tooltip"
                        data-bs-title="Excluir Gênero"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
